extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      //- medium 11 cols, large 12 cols
      .cell.medium-6.large-6 
        h1 #{details.name}
        p.lead.text-light
          | #{details.title}
        .portfolio-bio
          p
            | #{details.pitch}  
        h6 Contact Info
        div.contact
          i.fa-solid.fa-phone
          |   #{details.phone}
        div.contact
          i.fa-solid.fa-envelope
          |   #{details.email}
        div.contact
          i.fa-solid.fa-location-dot
          |   #{details.location}
        
        span.socials
          a(href=details.linkedin, target='_blank')
              i.fa-brands.fa-linkedin
          a(href=details.github, target='_blank')
              i.fa-brands.fa-github
          a(href=details.instagram, target='_blank')
              i.fa-brands.fa-instagram

      .cell.medium-1.large-1
      .cell.portfolio-meta.medium-5.large-5
        h6 Skills
        ul
        each skill in details.skills
          li.logo
            svg(viewBox=skill.vb, width="70", height="70")
              path(d=skill.d)
        ul
        each skill in details.skills
          li.skillnames #{skill.name}
        
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  